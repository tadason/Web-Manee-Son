rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ PUBLIC READ - ทุกคนอ่านได้
    match /apps/{document=**} {
      allow read: if true;
      
      // ✅ CREATE - Login user + Guest (with sessionId)
      allow create: if (
        request.auth != null  // login user
        || 
        (request.resource.data.isGuest == true && 
         request.resource.data.createdBy.startsWith("session-"))
      );
      
      // ✅ UPDATE - Only owner (login user by uid, guest by sessionId)
      allow update: if (
        (request.auth != null && resource.data.createdBy == request.auth.uid)
        ||
        (resource.data.isGuest == true && resource.data.createdBy == request.auth.uid)
      );
      
      // ❌ DELETE - Not allowed
    }
    
    // --- Default: Block all other collections ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}